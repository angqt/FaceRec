<Window x:Class="KinectSample1.src.showDb"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="showDb" Height="436.97" Width="453.731">
    <Canvas Name="canvas" Height="406" Margin="0,0,2,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="444">
        <Label Content="Name:" Height="28" Canvas.Left="243" Canvas.Top="239" Width="47"/>
        <Label Content="Surname:" Height="28" Canvas.Left="231" Canvas.Top="267" Width="59"/>
        <Label Content="Passport:" Height="28" Canvas.Left="231" Canvas.Top="300" Width="59"/>
