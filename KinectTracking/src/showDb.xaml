        <Button Content="Close" Height="25" Canvas.Left="352" Canvas.Top="353" Width="72" Click="Button_Click"/>
        <TextBlock Name="tbName" Height="28" Canvas.Left="295" TextWrapping="Wrap" Text="" Canvas.Top="244" Width="102"/>
        <TextBlock Name="tbSurname" Height="28" Canvas.Left="295" TextWrapping="Wrap" Text="" Canvas.Top="272" Width="102"/>
        <TextBlock Name="tbPass" Height="28" Canvas.Left="295" TextWrapping="Wrap" Text="" Canvas.Top="305" Width="102"/>
        <Canvas Name="cnvsCh" Height="186" Canvas.Left="244" Canvas.Top="24" Width="180" MouseLeftButtonDown="ShowDetails"/>
        <Button Content="Add Faces" Height="23" Canvas.Left="265" Canvas.Top="355" Width="70" Click="AddFaces"/>
    </Canvas>

</Window>
